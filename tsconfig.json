{
  "compilerOptions": {
    /* ðŸ”¹ Output and module setup */
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",

    /* ðŸ”¹ TypeScript safety options */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* ðŸ”¹ Useful for imports */
    "resolveJsonModule": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,

    /* ðŸ”¹ Code quality */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* ðŸ”¹ Decorator support (keep as is) */
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    /* ðŸ”¹ Debugging */
    "sourceMap": true,

    /* ðŸ”¹ Path alias (unchanged) */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
